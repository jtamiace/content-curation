<div id="metadata" class="container">
	<div id="hidden_node"></div>
	<!-- Optional, not needed if editing single files -->
	<div id="topic_tree_selector"></div>
	{{#if multiple_selected}}
		<div class="section pull-left">
			<ul class="list-unstyled" id="uploaded_list">
			{{#each node_list}}
				<li id="item_{{cid}}" class="uploaded disable_on_error"><li>
			{{else}}
				<li><h5>&nbsp;No items listed</h5></li>
			{{/each}}
			</ul>
			{{#if allow_add}}
				<a class="btn btn-default" id="add_more_button">Back</a>
			{{/if}}
		</div>
	{{/if}}
	<div  class="metadata_panel">
		<nav>
			<a class="btn btn-tab" id="metadata_details_btn">Details</a>
			<a class="btn btn-tab" id="metadata_preview_btn">Preview</a>
		</nav>
		<div id="metadata_edit_details" class="input_area container-fluid">
			<div class="section pull-left">
				<h4>Name<label class="required">*<span id="title_error"></span></label></h4> 
				<input type="text" id="input_title" class="disable-on-edit upload_input" required/>
				<h4>Description<label class="required"><span id="description_error"></span></label></h4> 
				<textarea id="input_description" class="disable-on-edit upload_input" required/></textarea>
				<h4>Tags (optional)</h4> 
				<input type="text" id="tag_box" class="tag_input" placeholder="Press 'Enter' to add tag"/>
				<div class="container-fluid">
					<div class="row" id="tag_area">
					</div>
				</div>					
			</div>
			<!--<div class="section construction pull-right">
				<h4>Related Content</h4>
				<div class="content-relation-area">
				</div>
				<br/>
				<h4>Prerequisite Content</h4>
				<div class="content-relation-area">
				</div>
			</div>-->
		</div>

		<div id="metadata_preview" class="container-fluid">
			<div id="preview_window">
				<div class="default_preview container-fluid">
					<h5 class="default_preview_text text-center"><em>No preview to display.</em></h5>
				</div>
			</div>
		</div>
	</div>
	<br/>
	<div class="pull-right metadata_save_buttons">
		<a class="btn btn-default" id="upload_save_button" class="disable_on_error">Save</a>
		<a class="btn btn-default" id="upload_save_finish_button" class="disable_on_error">Save and Finish</a>
	</div>
</div>